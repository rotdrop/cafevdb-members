{
  "name": "rotdrop/cafevdbmembers",
  "description": "CAFeV DB Member's Connector",
  "type": "project",
  "license": "AGPL",
  "authors": [
    {
      "name": "Claus-Justus Heine",
      "email": "himself@claus-justus-heine.de"
    }
  ],
  "require": {
    "acelaya/doctrine-enum-type": "^2.5",
    "doctrine/orm": "^2.14.0",
    "gedmo/doctrine-extensions": "3.12.x-dev",
    "mediamonks/doctrine-extensions": "0.1.x-dev",
    "myclabs/php-enum": "^1.8",
    "nesbot/carbon": "^2.46",
    "ramsey/uuid-doctrine": "^1.6",
    "ramsey/uuid": "^4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "nextcloud/coding-standard": "^0.5.0",
    "phpmd/phpmd": "@stable",
    "squizlabs/php_codesniffer": "^3.6.0",
    "zebra-north/phpcs-short-types": "^1.0"
  },
  "config": {
    "optimize-autoloader": true,
    "classmap-authoritative": true,
    "platform": {
      "php": "8.1.0"
    }
  },
  "repositories": [
    {
      "type": "path",
      "url": "3rdparty/gedmo-doctrine-extensions",
      "options": {
        "symlink": false
      }
    },
    {
      "type": "path",
      "url": "3rdparty/mediamonks-doctrine-extensions",
      "options": {
        "symlink": false
      }
    }
  ],
  "scripts": {
    "lint": "find . -name \\*.php -not -path './vendor/*' -not -path './build/*' -print0 | xargs -0 -n1 php -l",
    "cs:check": "php-cs-fixer fix --dry-run --diff",
    "cs:fix": "php-cs-fixer fix"
  }
}
